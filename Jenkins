pipeline {
    agent any
    parameters {
        string(name: 'Greeting', defaultValue: 'Hello', description: 'How should I greet the world?')
    }
    stages {
        stage ('Clone') {
            steps {
                echo "${params.Greeting} World!" 
            }
        }
        
        stage ('Build'){
            steps{
                print 'Hello'
                print 'world'
            }
        }
        
        stage ('Test'){
            steps{
                print 'Hello'
                print 'world'
            }
        }  
        
        stage ('Deploy'){
            steps{
                print 'Hello'
                print 'world'
            }
        }
    }    
}
